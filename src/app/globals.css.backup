/* ================================
   DUDA BERGER DESIGN SYSTEM
   Optimized for Performance & SEO
   ================================ */

@import "tailwindcss";

/* ================================
   CUSTOM FONTS
   ================================ */
@font-face {
  font-family: 'Unbounded';
  src: url('/fonts/unbounded-semibold.woff2') format('woff2');
  font-weight: 600;
  font-style: normal;
  font-display: swap;
}

/* ================================
   CSS CUSTOM PROPERTIES
   Design Tokens - Color System
   ================================ */
@layer base {
  :root {
    /* Brand Colors - Primary Palette */
    --carbon-black: #1C1C1D;
    --bitter-chocolate: #703535;
    --lobster-pink: #D65B58;
    --rosy-taupe: #D1A09C;
    --old-lace: #F6EEE1;
    
    /* Semantic Colors */
    --evergreen: #183D32;
    --frosted-mint: #DDF0CA;
    --honey-bronze: #EAA93A;
    --bronze: #B87F32;
    
    /* Text & Background */
    --text-primary: var(--carbon-black);
    --text-secondary: var(--bitter-chocolate);
    --bg-primary: var(--old-lace);
    --white: #FFFFFF;
  }
}

/* ================================
   BASE STYLES
   Global resets and base element styles
   ================================ */
@layer base {
  * {
    box-sizing: border-box;
  }

  html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }

  :root {
    font-family: 'KumbhSans', system-ui, Avenir, Helvetica, Arial, sans-serif;
    line-height: 1.5;
    font-weight: 400;
    color: var(--text-primary);
    background-color: var(--bg-primary);
    
    /* Performance optimizations */
    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    padding: 0;
    min-width: 320px;
    min-height: 100vh;
    width: 100%;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    overflow-x: hidden;
    font-family: 'KumbhSans', system-ui, Avenir, Helvetica, Arial, sans-serif;
  }

  /* Typography */
  a {
    font-weight: 500;
    color: var(--lobster-pink);
    text-decoration: inherit;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--bitter-chocolate);
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Unbounded', system-ui, sans-serif;
    font-weight: 600;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3rem);
  }

  p {
    line-height: 1.5em;
    font-family: 'KumbhSans', system-ui, Avenir, Helvetica, Arial, sans-serif;
    font-weight: normal;
  }

  button {
    font-family: 'Unbounded', system-ui, sans-serif !important;
    font-weight: 600 !important;
  }

  button:focus,
  button:focus-visible {
    outline: none;
  }
}

