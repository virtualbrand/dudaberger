/* ================================
   UTILITY CLASSES
   ================================ */
@layer utilities {
  /* Performance */
  .will-change-transform { will-change: transform; }
  .will-change-auto { will-change: auto; }
  
  /* Scrollbar Hide */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
}
